<%# @view instance of Invitation::SuccessView %>
<%= render 'organizations/organization_invitation_banner' %>

<div class="site-content">
  <div class="site-content-cap">
    <h2 class="site-content-heading">

      <% if @view.assignment_submission? %>
        <span class="assignment-icon assignment-icon-individual">
          <%= octicon 'person', height: 22 %>
        </span>
      <% else %>
        <span class="assignment-icon assignment-icon-group">
          <%= octicon 'organization', height: 22 %>
        </span>
      <% end %>

      Accepted the <strong><%= @view.title %></strong> assignment
    </h2>
  </div>
</div>

<div class="site-content-body">
  <div class="markdown-body">
    <h2>You are ready to go!</h2>
    <p>You may receive an invitation to join <%= link_to "@#{@view.github_organization.login}", @view.github_organization.html_url %> via email invitation on your behalf. No further action is necessary.</p>
    <p>Your assignment has been created here: <%= link_to @view.github_repository.html_url, @view.github_repository.html_url %></p>
  </div>
</div>
