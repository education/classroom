<%= render 'organizations/organization_banner' %>

<div class="site-content">
  <div class="site-content-cap">
    <h2 class="site-content-heading"><%= t('views.organizations.new_assignment') %></h2>
  </div>

  <div class="site-content-body">
    <div class="columns">
      <div class="one-half column text-center">
        <span class="assignment-icon assignment-icon-individual">
          <%= octicon 'person', height: 22 %>
        </span>
        <h3 class="assignment-option-name"><%= t('views.organizations.assignment_type') %></h3>
        <p class="assignment-option-description"><%= t('views.organizations.assignment_type_details') %></p>

        <%= link_to new_organization_assignment_path(@organization), class: 'btn btn-primary', role: 'button' do %>
          <%= t('views.organizations.create_individual_assignment') %>
        <% end %>
      </div>
      <div class="one-half column text-center">
        <span class="assignment-icon assignment-icon-group">
          <%= octicon 'organization', height: 22 %>
        </span>
        <h3 class="assignment-option-name"><%= t('views.organizations.group_assignment') %></h3>
        <p class="assignment-option-description"><%= t('views.organizations.group_assignment_details') %></p>

        <%= link_to new_organization_group_assignment_path(@organization), class: 'btn btn-primary', role: 'button' do %>
          <%= t('views.organizations.create_group_assignment') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
