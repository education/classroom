<% aria_label = org[:role] != 'admin' ? 'You cannot add this organization to classroom because you are not an owner' : 'Another owner has already added this organization to Classroom for GitHub' %>

<div class="organization-select-target disabled tooltipped tooltipped-s" aria-label="<%= aria_label %>">
  <%= image_tag GitHub::URL.avatar(id: org[:github_id], size: 200), class: 'avatar organization-select-avatar', width: 100, height: 100, alt: "@#{org[:login]}" %>
  <span class="organization css-truncate css-truncate-target" title=<%= "@#{org[:login]}" %>><%= "@#{org[:login]}" %></span>
</div>
