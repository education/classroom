<div class="pt-3" >
  <% if @organizations.present? %>

    <%= render partial: "organization_filters", locals: {
        submit_url: search_organizations_path,
        query: @query,
        sort_options: @sort_modes.keys,
        sort_option_links: @sort_modes_links,
        active_sort_option: @current_sort_mode,
        view_options: @view_modes.keys,
        view_option_links: @view_modes_links,
        active_view_option: @current_view_mode
      } %>
  <% end %>
</div>

<% if @organizations.present? %>
    <div class="my-4" id="js-search-results">
      <%= render partial: 'organization_card_layout', locals: {organizations: @organizations} %>
    </div>
<% else %>
    <div class="blankslate mt-6 py-8">
      <img src="https://ghicons.github.com/assets/images/light/Education.png" alt="Education icon" class="mb-3" />
      <h3><%= t('views.organizations.no_classrooms') %></h3>
      <p class="col-lg-6 mx-auto py-1"><%= t('views.organizations.no_classrooms_desc') %></p>

      <%= link_to new_organization_path, class: 'btn btn-sm btn-primary mt-2', role: 'button' do %>
        <%= t('views.organizations.create_first_classroom') %>
      <% end %>
    </div>
<% end %>
