<div class="col-md-9 bg-gray-light p-5">
  <div class="p-3 col-md-9">
    <h4><%= t('views.organizations.add_to_organization') %></h4>
    <p><%= t('views.organizations.must_add_as_owner_html', organization: sanitize(current_organization.github_organization.login)) %></p>
    <p><%= link_to("Invite TAs and admins to your GitHub organization â†’", current_organization.github_organization.team_invitations_url) %></p>
  </div>

  <div class="p-3 col-md-9">
    <h4><%= t('views.organizations.give_this_link') %></h4>

    <p>
      <div class="col-md-9 input-group">
        <%= content_tag :input, '', type: 'text', class: "form-control input-sm text-mono", id: "organization-#{current_organization.github_id}", value: organization_url(current_organization), readonly: 'readonly' %>
        <span class="input-group-button">
          <button aria-label="<%= t('views.organizations.copy_to_clipboard') %>" data-clipboard-target=<%= "#organization-#{current_organization.github_id}" %> class="js-clipboard btn btn-sm tooltipped tooltipped-s" data-copied-hint="<%= t('views.organizations.copied') %>" type="button">
            <%= octicon 'clippy' %>
            <%= t('views.organizations.copy_classroom_link') %>
          </button>
        </span>
      </div>
    </p>

    <p><%= t('views.organizations.give_this_link_desc') %></p>
    <p>
      <%= link_to organization_url(current_organization), organization_url(current_organization), class: 'mobile-invitation-content' %>
    </p>

    <% if action_name == 'invite' %>
      <div class="form-actions">
        <%= button_to t('views.organizations.continue'), link_lms_organization_path(current_organization), class: 'btn btn-primary right', method: :get %>
      </div>
    <% end %>
  </div>
</div>
