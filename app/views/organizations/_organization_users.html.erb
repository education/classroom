<div class="col-md-9 p-5">
  <% @current_organization.users.each do |user| %>
    <div class="bg-blue-light">
      <article class="Box-row d-flex flex-items-center flex-justify-between">
        <%= render partial: 'organizations/organization_user', locals: { user: user } %>
        <a data-remodal-target="remove-user-<%= user.id %>" class="btn btn-sm <%= ' disabled' if @current_organization.users.count < 2 %>">Remove</a>
      </article>
      <%= render partial: 'organizations/remove_user_modal', locals: { user: user } %>
    </div>
  <% end %>
</div>
