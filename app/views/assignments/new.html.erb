<%= render 'organizations/organization_banner' %>

<div class="site-content">
  <div class="site-content-cap">
    <h2 class="site-content-heading">
      <span class="assignment-icon assignment-icon-individual">
        <%= octicon 'person', height: 22 %>
      </span>
      New individual assignment
    </h2>
  </div>
</div>

<div class="site-content-body">
  <%= form_for [@organization, @assignment] do |f| %>
    <div class="columns">
      <div class="two-thirds column">
        <%= render 'shared/error_messages', object: f.object %>
        <%= render partial: 'assignments/assignment_form_options', locals: { f: f } %>
      </div>
      <% if !@organization.private_repos? %>
        <div class="one-third column dangerzone-container">
          <p class="text-emphasized">Unlimited Free Private Repositories</p>
          <p class="text-muted"> If you have not already, you may apply for unlimited free private repositories for this classroom organization <a href="https://education.github.com/discount_requests/new">here</a>.</p>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Create Assignment', class: 'btn btn-green' %>
      <%= link_to 'Cancel', organization_path(@organization), class: 'btn', role: 'button' %>
    </div>
  <% end %>
</div>
