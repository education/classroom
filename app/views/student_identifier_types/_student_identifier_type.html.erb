<div class="identifier-type-list-item flex-table">
  <div class="flex-table-item">
    <strong><%= student_identifier_type.name %></strong>
    <p class="identifier-type-description text-muted"><%= student_identifier_type.description %></p>
  </div>

  <div class="btn-group right">
    <%= link_to 'Edit', edit_organization_student_identifier_type_path(@organization, student_identifier_type), class: 'btn', role: 'button' %>
    <%= link_to 'Delete', '#', class: 'btn btn-danger', 'data-remodal-target': "delete-identifier-type-#{student_identifier_type.id}" %>
  </div>

  <small class="meta-data right"><%= pluralize(student_identifier_type.student_identifiers.count, 'student') %></small>
</div>

<div class="remodal text-left" data-remodal-id="<%= "delete-identifier-type-#{student_identifier_type.id}" %>">
  <button data-remodal-action="close" class="remodal-close"><%= octicon('x') %></button>
  <h2 class="remodal-header">Are you sure you want to delete this identifier type?</h2>

  <div class="remodal-warning">
    Any assignments or group assignments using this identifier type will no longer ask for student identification. All recorded student identifiers of this type will be removed. You cannot undo this action.
  </div>

  <%= form_for [@organization, student_identifier_type], html: { method: 'delete' } do |f| %>
      <%= f.submit 'I understand, delete this identifier', class: 'btn btn-danger btn-block js-submit' %>
  <% end %>
</div>
